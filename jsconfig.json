{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@pages/*": ["src/pages/*"],
			"@api/*": ["src/api/*"],
			"@context/*": ["src/context/*"],
			"@hooks/*": ["src/hooks/*"],
			"@modules/*": ["src/modules/*"],
			"@components/*": ["src/components/*"],
			"@shared/*": ["src/shared/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"]
		}
	},
	"include": ["src"]
}
